{
  "name": "ViewFont",
  "version": "1.0.0",
  "description": "View the Font, Get the Font!",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "ViewFont",
    "default_icon": "icon1.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon1.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "css": ["contentscript.css"],
      "js": ["contentscript.js"],
      "matches": ["*"]     
    }
  ]
}
